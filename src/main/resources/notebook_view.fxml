<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NotebookController">
   <top>
      <Label text="Notebook App" />
   </top>
   <center>
      <VBox>
         <children>
            <TextField fx:id="titleField" promptText="Enter note title..." />
            <TextArea fx:id="contentArea" prefHeight="150.0" promptText="Enter note content..." />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="addButton" onAction="#addNote" text="Add Note" />
                  <Button fx:id="updateButton" mnemonicParsing="false" onAction="#updateNote" text="Update Note" visible="false" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelEdit" text="Cancel" visible="false" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="notesListView" prefHeight="200.0" prefWidth="400.0" />
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#editNote" text="Edit" />
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteNote" text="Delete" />
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
